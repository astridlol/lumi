generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lumi {
  id        String   @id @default(cuid())
  name String
  createdAt DateTime @default(now())
  playerId  String
}

model LumiStats {
  lumiId String @id
  hunger Int @default(100)
  hapiness Int @default(0)
}

model Player {
  id  String @id
  lumi String?
}
